#include <stdio.h>
#include <time.h>
int linears(int i);
int binaryS(int f,int l);
void sort();
int a[10],key;
void main()
{
 int i,b,choice;
 clock_t start,end;
 for(i=0;i<=9;i++)
 {
     a[i]=rand()%100;
 }
 printf("The array of random elements are\n");
 for(i=0;i<=9;i++)
 {
     printf("%d\n",a[i]);
 }
 printf("Enter the number to be searched\n");
 scanf("%d",&key);
 printf("Enter 1 for linear search and 2 for binary search \n");
 scanf("%d",&choice);
 switch(choice)
 {
     case 1:
            start=clock();
            b=linears(0);
            end=clock();
            printf("Time taken:%f\n",(((double)(end-start))/CLOCKS_PER_SEC));
            if(b==-1)
            printf("Number not found\n");
            else
            printf("Number %d found at position: %d\n",key,b+1);
            break;
    case 2:sort();
           start=clock();
           b=binaryS(0,9);
           end=clock();
           printf("Time taken:%f",(((double)(end-start))/CLOCKS_PER_SEC));
           if(b==-1)
          {
            printf("Number not found\n");
          }
           else 
          {
            printf("Number %d found at position:%d",key,(b+1));
          }
 }
}
void sort()
{
    int i,j,c;
    for(i=0;i<9;i++)
    {
        for(j=i+1;j<=9;j++)
        {
            if(a[j]<a[i])
            {
             c=a[i];
             a[i]=a[j];
             a[j]=c;
            }
        }
    }
    printf("Sorted Array is:\n");
    for(i=0;i<=9;i++)
    {
      printf("%d\n",a[i]);
    }
}
int linears(int i)
{
    if(i==10)
    return -1;
    else if(a[i]==key)
    return i;
    else
    linears(++i);
}
int binaryS(int f,int l)
{
    int m;
    m=((f+l)/2);
    if(key==a[m])
    {
        return m;
    }
    else if(key>a[m])
    {
        return binaryS(++m,l);
    }
    else if(key<a[m])
    {
        return binaryS(f,--m);
    }
    else if(f>l)
    {
        return -1;
    }
}
